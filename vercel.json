{
  "version": 2,
  "builds": [
    { "src": "api/*.go", "use": "@vercel/go" }
  ],
  "routes": [
    { "src": "/api/hello", "dest": "/api/index.go"},
    { "src": "/api/productPrice", "dest": "/api/product_price.go"},
    { "src": "/api/productDiscount", "dest": "/api/product_discount.go"},
    { "src": "/api/products", "dest": "/api/all_products.go"},
    { "src": "/api/product", "dest": "/api/product.go"}
  ],
  "crons": [
    {
      "path": "/api/hello",
      "schedule": "0 0 * * 1-5"
    }
  ]
}
